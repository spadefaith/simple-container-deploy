{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": false,
    "checkJs": true,
    "removeComments": true,
    "outDir": "dist", // Compiled Output Directory
    "rootDir": "",
    "typeRoots": ["./node_modules/@types"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "resolvePackageJsonImports": false,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.js", // Every js file inside src folder
    "src/**/*.ts", // Every ts file inside src folder
    "db/**/*.ts", // Every ts file inside src folder
    "db/**/*.js", // Every ts file inside src folder
    "server.js"
  ],
  "exclude": [
    "node_modules",
    ".serverless", // Exclude serverless directory
    "dist" // Exclude compiled output by Typescript compiler
  ]
}
